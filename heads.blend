	req=(strapdir)
	ckreq || return 1

	## XXX: torbirdy like this until we run an amprolla instance
	sudo cp "$R/../extra/torbirdy_0.1.4.deb" "$strapdir/torbirdy.deb"

	cat <<EOF | sudo tee ${strapdir}/finalize >/dev/null
